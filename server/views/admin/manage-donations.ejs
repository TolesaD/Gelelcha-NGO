<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
</head>
<body>
    <%- include('../partials/admin-sidebar') %>
    
    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Donations</h1>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Donor</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (donations && donations.length > 0) { %>
                                <% donations.forEach(donation => { %>
                                    <tr>
                                        <td>
                                            <div>
                                                <h6 class="mb-0"><%= donation.donor.name %></h6>
                                                <small class="text-muted"><%= donation.donor.email %></small>
                                            </div>
                                        </td>
                                        <td>$<%= donation.amount.toLocaleString() %></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                donation.paymentStatus === 'completed' ? 'success' : 
                                                donation.paymentStatus === 'pending' ? 'warning' : 'danger' 
                                            %>">
                                                <%= donation.paymentStatus %>
                                            </span>
                                        </td>
                                        <td><%= donation.createdAt.toLocaleDateString() %></td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <i class="fas fa-donate fa-2x text-muted mb-3"></i>
                                        <p class="text-muted">No donations found</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
</body>
</html>