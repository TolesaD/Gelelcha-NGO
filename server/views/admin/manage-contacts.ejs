<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
</head>
<body>
    <%- include('../partials/admin-sidebar') %>
    
    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Contacts</h1>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (contacts && contacts.length > 0) { %>
                                <% contacts.forEach(contact => { %>
                                    <tr>
                                        <td>
                                            <h6 class="mb-0"><%= contact.name %></h6>
                                        </td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.subject %></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                contact.status === 'new' ? 'danger' : 
                                                contact.status === 'read' ? 'info' : 
                                                contact.status === 'replied' ? 'success' : 'secondary' 
                                            %>">
                                                <%= contact.status %>
                                            </span>
                                        </td>
                                        <td><%= contact.createdAt.toLocaleDateString() %></td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="fas fa-envelope fa-2x text-muted mb-3"></i>
                                        <p class="text-muted">No contact messages found</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
</body>
</html>