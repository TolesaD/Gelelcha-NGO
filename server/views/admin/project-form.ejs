<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <%- include('../partials/admin-sidebar') %>
    
    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= project ? 'Edit Project' : 'Add New Project' %></h1>
            <a href="/admin/projects" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Projects
            </a>
        </div>

        <% if (success_msg) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i> <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error_msg) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card form-container">
            <div class="card-body">
                <form action="<%= formAction %>" method="POST">
                    <input type="hidden" name="_method" value="<%= formMethod %>">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="title" class="form-label">Project Title *</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       value="<%= project ? project.title : '' %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="ongoing" <%= project && project.status === 'ongoing' ? 'selected' : '' %>>Ongoing</option>
                                    <option value="completed" <%= project && project.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="upcoming" <%= project && project.status === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="shortDescription" class="form-label">Short Description *</label>
                        <textarea class="form-control" id="shortDescription" name="shortDescription" 
                                  rows="2" required><%= project ? project.shortDescription : '' %></textarea>
                        <small class="text-muted">Maximum 150 characters</small>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Full Description *</label>
                        <textarea class="form-control" id="description" name="description" 
                                  rows="5" required><%= project ? project.description : '' %></textarea>
                    </div>

                    <!-- Add this after the description field -->
<div class="mb-3">
    <label for="image" class="form-label">Project Image</label>
    <input type="file" class="form-control" id="image" name="image" accept="image/*">
    <% if (project && project.image) { %>
        <div class="mt-2">
            <img src="/uploads/<%= project.image %>" alt="Current image" width="100" class="img-thumbnail">
            <small class="text-muted">Current image</small>
        </div>
    <% } %>
</div>
    <!-- Add this after the image field -->
<div class="mb-3">
    <label for="video" class="form-label">Project Video (Optional)</label>
    <input type="file" class="form-control" id="video" name="video" accept="video/*">
    <small class="text-muted">Max 50MB. Supported formats: MP4, MOV, AVI, etc.</small>
    <% if (project && project.video) { %>
        <div class="mt-2">
            <video width="200" controls class="rounded">
                <source src="/uploads/<%= project.video %>" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <small class="text-muted">Current video</small>
        </div>
    <% } %>
</div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="targetAmount" class="form-label">Target Amount (ETB)</label>
                                <input type="number" class="form-control" id="targetAmount" name="targetAmount" 
                                       value="<%= project ? project.targetAmount : '' %>" step="0.01">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="raisedAmount" class="form-label">Raised Amount (ETB)</label>
                                <input type="number" class="form-control" id="raisedAmount" name="raisedAmount" 
                                       value="<%= project ? project.raisedAmount : '0' %>" step="0.01">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isFeatured" name="isFeatured" 
                                   <%= project && project.isFeatured ? 'checked' : '' %>>
                            <label class="form-check-label" for="isFeatured">
                                Feature this project on homepage
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i><%= project ? 'Update Project' : 'Create Project' %>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>