<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
</head>
<body>
    <%- include('../partials/admin-sidebar') %>
    
    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Volunteer Details</h1>
            <a href="/admin/volunteers" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Volunteers
            </a>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Personal Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> <%= volunteer.personalInfo.firstName %> <%= volunteer.personalInfo.lastName %></p>
                                <p><strong>Email:</strong> <%= volunteer.personalInfo.email %></p>
                                <p><strong>Phone:</strong> <%= volunteer.personalInfo.phone %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Status:</strong> 
                                    <span class="badge bg-<%= 
                                        volunteer.status === 'approved' ? 'success' : 
                                        volunteer.status === 'pending' ? 'warning' : 'secondary' 
                                    %>">
                                        <%= volunteer.status %>
                                    </span>
                                </p>
                                <p><strong>Registered:</strong> <%= volunteer.createdAt.toLocaleDateString() %></p>
                                <% if (volunteer.personalInfo.dateOfBirth) { %>
                                    <p><strong>Date of Birth:</strong> <%= volunteer.personalInfo.dateOfBirth.toLocaleDateString() %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (volunteer.skills && volunteer.skills.length > 0) { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Skills & Interests</h5>
                        <p><strong>Skills:</strong> <%= volunteer.skills.join(', ') %></p>
                        <% if (volunteer.interests && volunteer.interests.length > 0) { %>
                            <p><strong>Interests:</strong> <%= volunteer.interests.join(', ') %></p>
                        <% } %>
                        <% if (volunteer.availability) { %>
                            <p><strong>Availability:</strong> <%= volunteer.availability %></p>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Update Status</h5>
                        <form action="/admin/volunteers/status/<%= volunteer._id %>" method="POST">
                            <div class="mb-3">
                                <label for="status" class="form-label">Volunteer Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="pending" <%= volunteer.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="approved" <%= volunteer.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                    <option value="rejected" <%= volunteer.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                                    <option value="active" <%= volunteer.status === 'active' ? 'selected' : '' %>>Active</option>
                                    <option value="inactive" <%= volunteer.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Update Status</button>
                        </form>
                    </div>
                </div>

                <% if (volunteer.personalInfo.address) { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Address</h5>
                        <p>
                            <%= volunteer.personalInfo.address.street %><br>
                            <%= volunteer.personalInfo.address.city %>, <%= volunteer.personalInfo.address.state %><br>
                            <%= volunteer.personalInfo.address.zipCode %>, <%= volunteer.personalInfo.address.country %>
                        </p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
</body>
</html>