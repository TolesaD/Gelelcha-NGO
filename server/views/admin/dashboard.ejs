<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .admin-container {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .admin-sidebar {
            background-color: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
            width: 250px;
            padding-top: 20px;
            left: 0;
            top: 0;
            z-index: 1000;
        }
        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 12px 20px;
            margin: 4px 0;
            border-radius: 5px;
            transition: all 0.3s;
            text-decoration: none;
        }
        .admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            background-color: #2c6bed;
            color: white;
        }
        .admin-sidebar .nav-link i {
            width: 20px;
            margin-right: 10px;
        }
        .sidebar-header {
            padding: 0 20px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }
        .stats-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 20px;
            text-align: center;
            transition: transform 0.3s;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c6bed;
            margin-bottom: 5px;
        }
        .stats-label {
            color: #6c757d;
            font-weight: 500;
        }
        .stats-icon {
            font-size: 2rem;
            color: #2c6bed;
            margin-bottom: 15px;
        }
        .dashboard-header {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }
        .recent-activity {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }
        .activity-item {
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }
        .activity-item:last-child {
            border-bottom: none;
        }
        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e3f2fd;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }
        .activity-icon i {
            color: #2c6bed;
        }
        @media (max-width: 768px) {
            .admin-sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .admin-container {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <div class="text-center">
                <img src="/images/logo.png" alt="Gelelcha Charity" height="40">
                <h5 class="mt-2 mb-0">Admin Panel</h5>
                <small class="text-muted">Welcome, <%= adminName %></small>
            </div>
        </div>
<div class="nav flex-column">
    <a href="/admin/dashboard" class="nav-link active">
        <i class="fas fa-tachometer-alt"></i> Dashboard
    </a>
    <a href="/admin/projects" class="nav-link">
        <i class="fas fa-project-diagram"></i> Projects
    </a>
    <a href="/admin/donations" class="nav-link">
        <i class="fas fa-donate"></i> Donations
    </a>
    <a href="/admin/volunteers" class="nav-link">
        <i class="fas fa-hands-helping"></i> Volunteers
    </a>
    <a href="/admin/blog" class="nav-link">
        <i class="fas fa-blog"></i> Blog
    </a>
    <a href="/admin/contacts" class="nav-link">
        <i class="fas fa-envelope"></i> Messages
    </a>
    <a href="/admin/logout" class="nav-link">
        <i class="fas fa-sign-out-alt"></i> Logout
    </a>
</div>

    <div class="admin-container">
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Dashboard Overview</h1>
                <span class="text-muted">Last login: <%= new Date().toLocaleDateString() %></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-6">
                <div class="stats-card">
                    <div class="stats-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <div class="stats-number">12</div>
                    <div class="stats-label">Active Projects</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stats-card">
                    <div class="stats-icon">
                        <i class="fas fa-donate"></i>
                    </div>
                    <div class="stats-number">47</div>
                    <div class="stats-label">Total Donations</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stats-card">
                    <div class="stats-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stats-number">23</div>
                    <div class="stats-label">Volunteers</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stats-card">
                    <div class="stats-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="stats-number">8</div>
                    <div class="stats-label">New Messages</div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="recent-activity">
                    <h5 class="mb-4">Recent Activity</h5>
                    <div class="activity-item d-flex align-items-center">
                        <div class="activity-icon">
                            <i class="fas fa-donate"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">New donation received</h6>
                            <p class="text-muted mb-0">$500 from John Smith</p>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                    </div>
                    <div class="activity-item d-flex align-items-center">
                        <div class="activity-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">New volunteer registered</h6>
                            <p class="text-muted mb-0">Sarah Johnson joined</p>
                            <small class="text-muted">5 hours ago</small>
                        </div>
                    </div>
                    <div class="activity-item d-flex align-items-center">
                        <div class="activity-icon">
                            <i class="fas fa-comment"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">New message received</h6>
                            <p class="text-muted mb-0">From Michael Brown</p>
                            <small class="text-muted">Yesterday</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="recent-activity">
                    <h5 class="mb-4">Quick Actions</h5>
<div class="d-grid gap-2">
    <a href="/admin/projects/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Project
    </a>
    <a href="/admin/blog/new" class="btn btn-outline-primary">
        <i class="fas fa-edit me-2"></i>Write Blog Post
    </a>
    <a href="/admin/donations" class="btn btn-outline-primary">
        <i class="fas fa-cog me-2"></i>Manage Donations
    </a>
</div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
</body>
</html>