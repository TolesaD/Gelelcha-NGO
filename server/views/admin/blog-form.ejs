<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <%- include('../partials/admin-sidebar') %>
    
    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= blog ? 'Edit Blog Post' : 'Add New Blog Post' %></h1>
            <a href="/admin/blog" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Blog
            </a>
        </div>

        <% if (success_msg) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i> <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error_msg) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card form-container">
            <div class="card-body">
                <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">
                    <!-- FIXED: Use proper method-override syntax -->
                    <% if (formMethod === 'PUT') { %>
                        <input type="hidden" name="_method" value="PUT">
                    <% } %>
                    
                    <div class="mb-3">
                        <label for="title" class="form-label">Blog Title *</label>
                        <input type="text" class="form-control" id="title" name="title" 
                               value="<%= blog ? blog.title : '' %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Blog Image</label>
                        <input type="file" class="form-control" id="image" name="image" accept="image/*">
                        <% if (blog && blog.image && blog.image !== 'default-blog.jpg') { %>
                            <div class="mt-2">
                                <!-- FIXED: Changed from /public/uploads/ to /uploads/ -->
                                <img src="/uploads/<%= blog.image %>" alt="Current image" width="100" class="img-thumbnail">
                                <small class="text-muted">Current image</small>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="video" class="form-label">Blog Video (Optional)</label>
                        <input type="file" class="form-control" id="video" name="video" accept="video/*">
                        <small class="text-muted">Max 50MB. Supported formats: MP4, MOV, AVI, etc.</small>
                        <% if (blog && blog.video) { %>
                            <div class="mt-2">
                                <!-- FIXED: Changed from /public/uploads/ to /uploads/ -->
                                <video width="200" controls class="rounded">
                                    <source src="/uploads/<%= blog.video %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                <small class="text-muted">Current video</small>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">Content *</label>
                        <textarea class="form-control" id="content" name="content" 
                                  rows="10" required><%= blog ? blog.content : '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="excerpt" class="form-label">Excerpt</label>
                        <textarea class="form-control" id="excerpt" name="excerpt" 
                                  rows="3"><%= blog ? blog.excerpt : '' %></textarea>
                        <small class="text-muted">Short summary (optional, will be generated from content if empty)</small>
                    </div>

                    <div class="mb-3">
                        <label for="tags" class="form-label">Tags (comma-separated)</label>
                        <input type="text" class="form-control" id="tags" name="tags" 
                               value="<%= blog && blog.tags ? blog.tags.join(', ') : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Status *</label>
                        <select class="form-select" id="status" name="status" required>
                            <option value="published" <%= !blog || blog.status === 'published' ? 'selected' : '' %>>Published</option>
                            <option value="draft" <%= blog && blog.status === 'draft' ? 'selected' : '' %>>Draft</option>
                            <option value="archived" <%= blog && blog.status === 'archived' ? 'selected' : '' %>>Archived</option>
                        </select>
                        <small class="text-muted">Select "Published" to make this post visible on the website</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i><%= blog ? 'Update Blog Post' : 'Create Blog Post' %>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    
    <script>
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
        
        document.getElementById('content').addEventListener('input', function() {
            const excerptField = document.getElementById('excerpt');
            if (!excerptField.value && this.value.length > 0) {
                excerptField.value = this.value.substring(0, 200) + (this.value.length > 200 ? '...' : '');
            }
        });
    </script>
</body>
</html>