<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .blog-content {
            line-height: 1.8;
            font-size: 1.1rem;
        }
        .blog-content img, .blog-content video {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin: 2rem 0;
        }
        .blog-meta {
            border-left: 4px solid #2c6bed;
            padding-left: 1rem;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container my-5">
        <% if (blog) { %>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Blog Header -->
                    <div class="text-center mb-5">
                        <h1 class="display-4 fw-bold mb-3"><%= blog.title %></h1>
                        
                       <% if (blog.image && blog.image !== 'default-blog.jpg') { %>
                        <img src="/uploads/<%= blog.image %>" alt="<%= blog.title %>" class="img-fluid rounded shadow mb-4" style="max-height: 400px; object-fit: cover;">
                        <% } %>
                        
                        <div class="blog-meta text-start">
                            <p class="text-muted mb-1">
                                <i class="fas fa-user me-2"></i>By <%= blog.author || 'Admin' %>
                            </p>
                            <p class="text-muted mb-1">
                                <i class="fas fa-calendar me-2"></i>
                                <%= blog.publishedAt ? blog.publishedAt.toLocaleDateString() : blog.createdAt.toLocaleDateString() %>
                            </p>
                            <p class="text-muted">
                                <i class="fas fa-eye me-2"></i><%= blog.views || 0 %> views
                            </p>
                        </div>
                    </div>

                    <!-- Video Section -->
                   <% if (blog.video) { %>
    <div class="mb-5">
        <div class="ratio ratio-16x9">
            <video controls class="rounded shadow">
                <source src="/uploads/<%= blog.video %>" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
<% } %>

                    <!-- Blog Content -->
                    <div class="blog-content">
                        <%= blog.content.replace(/\n/g, '<br>') %>
                    </div>

                    <!-- Tags -->
                    <% if (blog.tags && blog.tags.length > 0) { %>
                        <div class="mt-5">
                            <h5>Tags:</h5>
                            <div class="d-flex flex-wrap gap-2">
                                <% blog.tags.forEach(tag => { %>
                                    <span class="badge bg-primary"><%= tag %></span>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <!-- Navigation -->
                    <div class="mt-5 pt-4 border-top">
                        <div class="d-flex justify-content-between">
                            <a href="/blog" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Blog
                            </a>
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <h2>Blog Post Not Found</h2>
                <p class="lead">The blog post you're looking for doesn't exist.</p>
                <a href="/blog" class="btn btn-primary">Back to Blog</a>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>