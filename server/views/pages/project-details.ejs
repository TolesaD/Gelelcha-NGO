<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: project.title + ' - Gelelcha Charity'}) %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Project Media - Supports both image and video -->
                <div class="card mb-4">
                    <div class="card-body p-0">
                        <% if (project.video && project.video !== '') { %>
                            <!-- Video Player -->
                            <div class="ratio ratio-16x9">
                                <video controls class="w-100">
                                    <source src="/uploads/<%= project.video %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        <% } else if (project.image && project.image !== 'default-project.jpg') { %>
                            <!-- Image -->
                            <img src="/uploads/<%= project.image %>" 
                                 alt="<%= project.title %>" 
                                 class="card-img-top"
                                 style="max-height: 400px; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='/images/default-project.jpg';">
                        <% } else { %>
                            <!-- Default Image -->
                            <img src="/images/default-project.jpg" 
                                 alt="Default project image" 
                                 class="card-img-top"
                                 style="max-height: 400px; object-fit: cover;">
                        <% } %>
                    </div>
                </div>

                <h1 class="mb-3"><%= project.title %></h1>
                
                <div class="d-flex gap-3 mb-4">
                    <span class="badge bg-<%= 
                        project.status === 'completed' ? 'success' : 
                        project.status === 'ongoing' ? 'primary' : 'warning' 
                    %>">
                        <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                    </span>
                    
                    <% if (project.isFeatured) { %>
                        <span class="badge bg-info">Featured</span>
                    <% } %>
                </div>

                <div class="mb-4">
                    <h3>About this Project</h3>
                    <p class="lead"><%= project.shortDescription %></p>
                    <p><%= project.description %></p>
                </div>

                <% if (project.targetAmount > 0) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">Funding Progress</h4>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3" style="height: 25px;">
                            <div class="progress-bar" 
                                 role="progressbar" 
                                 style="width: <%= Math.min((project.raisedAmount / project.targetAmount * 100), 100) %>%"
                                 aria-valuenow="<%= project.raisedAmount %>"
                                 aria-valuemin="0"
                                 aria-valuemax="<%= project.targetAmount %>">
                                <%= Math.min(Math.round(project.raisedAmount / project.targetAmount * 100), 100) %>%
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h5 class="text-primary">$<%= project.raisedAmount.toLocaleString() %></h5>
                                <small>Raised</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-success"><%= project.donors || 0 %></h5>
                                <small>Donors</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-info">$<%= project.targetAmount.toLocaleString() %></h5>
                                <small>Target</small>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <div class="d-grid gap-2">
                    <a href="/donate?project=<%= project._id %>" class="btn btn-primary btn-lg">
                        <i class="fas fa-donate me-2"></i>Donate to this Project
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Project Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Status:</strong>
                            <span class="badge bg-<%= 
                                project.status === 'completed' ? 'success' : 
                                project.status === 'ongoing' ? 'primary' : 'warning' 
                            %> float-end">
                                <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                            </span>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Start Date:</strong>
                            <span class="float-end">
                                <%= project.startDate ? new Date(project.startDate).toLocaleDateString() : 'Not specified' %>
                            </span>
                        </div>
                        
                        <% if (project.endDate) { %>
                        <div class="mb-3">
                            <strong>End Date:</strong>
                            <span class="float-end">
                                <%= new Date(project.endDate).toLocaleDateString() %>
                            </span>
                        </div>
                        <% } %>
                        
                        <% if (project.impact && project.impact.beneficiaries > 0) { %>
                        <div class="mb-3">
                            <strong>Beneficiaries:</strong>
                            <span class="float-end">
                                <%= project.impact.beneficiaries.toLocaleString() %>
                            </span>
                        </div>
                        <% } %>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Share this Project</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-facebook"></i>
                            </a>
                            <a href="#" class="btn btn-outline-info btn-sm">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger btn-sm">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="btn btn-outline-dark btn-sm">
                                <i class="fas fa-link"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>