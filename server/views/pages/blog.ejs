<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .blog-card {
            transition: transform 0.3s ease;
        }
        .blog-card:hover {
            transform: translateY(-3px);
        }
        .card-img-top, .card-video-top {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container my-5">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h1>Blog & News</h1>
                <p class="lead">Latest updates and stories from our organization</p>
            </div>
        </div>

        <% if (blogs && blogs.length > 0) { %>
            <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card blog-card h-100">
                            <% if (blog.image && blog.image !== 'default-blog.jpg') { %>
                                <img src="/uploads/<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>">
                            <% } else { %>
                                <img src="/uploads/default-blog.jpg" class="card-img-top" alt="Default Blog Image">
                            <% } %>
                            <% if (blog.video) { %>
                                <video controls class="card-video-top">
                                    <source src="/uploads/<%= blog.video %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            <% } %>
                            <div class="card-body">
                                <span class="badge bg-primary mb-2">
                                    <%= blog.createdAt ? blog.createdAt.toLocaleDateString() : 'Recent' %>
                                </span>
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.excerpt %></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-eye me-1"></i> <%= blog.views || 0 %> views
                                    </small>
                                    <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="card">
                        <div class="card-body py-5">
                            <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                            <h5>No Blog Posts Yet</h5>
                            <p class="text-muted">Check back soon for updates and stories!</p>
                            <a href="/" class="btn btn-primary">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>