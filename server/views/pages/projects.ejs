<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: title}) %>
    <style>
        .project-card {
            transition: transform 0.3s ease;
        }
        .project-card:hover {
            transform: translateY(-5px);
        }
        .progress {
            height: 8px;
        }
        .video-thumbnail {
            background: linear-gradient(45deg, #000000, #333333);
            cursor: pointer;
        }
        .video-thumbnail:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container my-5">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h1>Our Projects</h1>
                <p class="lead">Discover the impactful work we're doing in communities</p>
            </div>
        </div>

        <% if (projects && projects.length > 0) { %>
            <div class="row">
                <% projects.forEach(project => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card project-card h-100">
                            <!-- Project Media with Video Support -->
                            <div class="position-relative">
                                <% if (project.video && project.video !== '') { %>
                                    <!-- Video Indicator -->
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-danger">
                                            <i class="fas fa-video me-1"></i>Video
                                        </span>
                                    </div>
                                <% } %>
                                
                                <% if (project.video && project.video !== '') { %>
                                    <!-- Video Thumbnail -->
                                    <div class="video-thumbnail card-img-top d-flex align-items-center justify-content-center text-white"
                                         style="height: 250px;"
                                         onclick="window.location.href='/projects/<%= project._id %>'">
                                        <div class="text-center">
                                            <i class="fas fa-play-circle fa-3x mb-2"></i>
                                            <p class="mb-0">Click to watch video</p>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <!-- Image -->
                                    <img src="/uploads/<%= project.image || 'default-project.jpg' %>" 
                                         class="card-img-top" alt="<%= project.title %>"
                                         style="height: 250px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='/images/default-project.jpg';">
                                <% } %>
                            </div>
                            
                            <div class="card-body">
                                <span class="badge bg-<%= 
                                    project.status === 'completed' ? 'success' : 
                                    project.status === 'ongoing' ? 'primary' : 'warning' 
                                %> mb-2">
                                    <%= project.status %>
                                </span>
                                <h5 class="card-title"><%= project.title %></h5>
                                <p class="card-text"><%= project.shortDescription %></p>
                                
                                <!-- Video indicator text -->
                                <% if (project.video && project.video !== '') { %>
                                    <p class="small text-muted mb-2">
                                        <i class="fas fa-video me-1"></i>Includes video content
                                    </p>
                                <% } %>
                                
                                <% if (project.targetAmount) { %>
                                    <div class="progress mb-2">
                                        <div class="progress-bar" role="progressbar" 
                                            style="width: <%= Math.min(((project.raisedAmount || 0) / project.targetAmount * 100), 100) %>%">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between small text-muted mb-3">
                                        <span>$<%= (project.raisedAmount || 0).toLocaleString() %> raised</span>
                                        <span><%= Math.min(Math.round((project.raisedAmount || 0) / project.targetAmount * 100), 100) %>%</span>
                                    </div>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/projects/<%= project._id %>" class="btn btn-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="card">
                        <div class="card-body py-5">
                            <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                            <h5>No Projects Available Yet</h5>
                            <p class="text-muted">We're working on new projects. Please check back soon!</p>
                            <a href="/" class="btn btn-primary">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>